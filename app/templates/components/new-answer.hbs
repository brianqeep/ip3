{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'saveAnswer'}}>Post answer</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
