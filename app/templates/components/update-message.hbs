{{#if updateMessageForm}}
  <h4>Update {{message.author}}'s question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="note">Notes</label>
        {{input value=note id="note"}}
      </div>


      <button {{action 'update' message}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateMessageForm'}}>Update</button>
{{/if}}
